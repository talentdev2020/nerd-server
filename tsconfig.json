{
  "compilerOptions": {
    "module": "commonjs",
    "target": "es2017",
    "experimentalDecorators": true,
    "noImplicitAny": true,
    "outDir": "./lib",
    "sourceMap": true,
    "baseUrl": ".",
    "resolveJsonModule": true,
    "allowSyntheticDefaultImports": true,
    "skipLibCheck": true,
    "paths": {
      "*": ["node_modules/*", "*"]
    }
  },
  "include": ["src/**/*"]
}
